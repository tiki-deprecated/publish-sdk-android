<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/offer_card"
    android:elevation="4dp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/offer_image"
        android:layout_width="300dp"
        android:layout_height="86dp"
        app:srcCompat="@drawable/offer_img" />

    <TextView
        android:id="@+id/offer_description"
        android:layout_width="300dp"
        android:layout_height="64dp"
        android:fontFamily="@font/space_grotesk_bold"
        android:gravity="center_vertical"
        android:text="Trade your IDFA (kind of like a serial # for your phone) for a discount."
        android:textColor="#99000000"
        android:textSize="16sp"
        app:fontWeight="900" />
</LinearLayout>
